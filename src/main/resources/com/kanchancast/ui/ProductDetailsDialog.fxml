<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kanchancast.ui.ProductDetailsDialogController"
            prefWidth="520" prefHeight="640"
            style="-fx-padding:15;">

    <content>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="12" alignment="TOP_LEFT" prefWidth="480">

                    <Label fx:id="nameLabel"
                           style="-fx-font-size:18px;-fx-font-weight:bold;"/>

                    <ImageView fx:id="productImage"
                               fitWidth="380" fitHeight="200" preserveRatio="true"/>

                    <GridPane hgap="10" vgap="6">
                        <Label text="Category:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="typeLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Gold Weight:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="goldWeightLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Diamond Weight:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="diamondWeightLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Stone Weight:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="stoneWeightLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Duration:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="durationLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Price:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="priceLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Label text="Description:" style="-fx-font-weight:bold;"/>

                    <!-- CLEAN paragraph look (no textbox border/background) -->
                    <Label fx:id="descriptionLabel"
                           wrapText="true"
                           maxWidth="460"
                           style="-fx-text-fill:#333333; -fx-font-size:12.5px; -fx-line-spacing:2px;" />

                </VBox>
            </content>
        </ScrollPane>
    </content>
</DialogPane>
